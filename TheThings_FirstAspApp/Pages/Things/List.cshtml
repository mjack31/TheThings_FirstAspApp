@* Dyrektywa która mowi frameworkowi ze to page *@
@page
@* Dyrektywa która definiuje model danego page'a *@
@model TheThings_FirstAspApp.Pages.Things.ListModel
@* Miejsce na definicje i inicjalizacje *@
@{
    ViewData["Title"] = "List";
}

<h2>List of Things</h2>
<form method="get" class="input-group">
    <input type="search" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username"
           asp-for="SearchTerm">
    <span class="input-group-btn">
        <button class="btn btn-outline-secondary">Search</button>
    </span>
</form>

<div>
    <table class="table">
        @foreach (var thing in Model.Things)
        {
            <tr>
                <td>@thing.Name</td>
                <td>@thing.Location</td>
                <td>@thing.Type</td>
            </tr>
        }
    </table>
</div>
<div>
    @Model.ConfigMsg
</div>



